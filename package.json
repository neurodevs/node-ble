{
  "name": "@neurodevs/node-ble",
  "version": "1.0.3",
  "description": "Connect and stream data from Bluetooth Low Energy (BLE) devices",
  "type": "module",
  "keywords": [
    "nodejs",
    "typescript",
    "tdd"
  ],
  "license": "MIT",
  "author": "Eric Yates <hello@ericthecurious.com>",
  "homepage": "https://github.com/neurodevs/node-ble",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neurodevs/node-ble.git"
  },
  "bugs": {
    "url": "https://github.com/neurodevs/node-ble/issues"
  },
  "main": "build/index.js",
  "scripts": {
    "build.ci": "yarn run build.tsc && yarn run lint",
    "build.dev": "yarn run build.tsc --sourceMap ; yarn run lint ; prettier --write .",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.tsc": "yarn run build.copy-files && tsc",
    "clean": "yarn run clean.build",
    "clean.all": "yarn run clean.dependencies && yarn run clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "rebuild": "yarn run clean.all && yarn install && yarn run build.dev",
    "update.dependencies": "yarn run clean.dependencies && yarn",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn run build.copy-files'"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-22"
  },
  "devDependencies": {
    "@neurodevs/eslint-config-ndx": "^1.0.1",
    "@neurodevs/generate-id": "^1.1.2",
    "@neurodevs/node-tdd": "^0.2.5",
    "@neurodevs/prettier-config-ndx": "^1.0.1",
    "@regressionproof/cli": "^0.8.0",
    "@regressionproof/jest-reporter": "^0.8.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "prettier": "^3.8.1",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.6.3"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "testEnvironment": "node",
    "testTimeout": 5000,
    "maxWorkers": 4,
    "testMatch": [
      "<rootDir>/build/__tests__/**/*.test.js?(x)"
    ],
    "reporters": [
      "default",
      "@regressionproof/jest-reporter"
    ]
  }
}
